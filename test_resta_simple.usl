public static void main(String[] args) {
    int contador = 3;
    System.out.println("Contador inicial: " + contador);
    
    contador = contador - 1;
    System.out.println("Después de restar 1: " + contador);
    
    contador = contador - 1;
    System.out.println("Después de restar 1 otra vez: " + contador);
}
